<Window x:Class="GuitarStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guitar Store" Height="400" Width="625"
        WindowStartupLocation="CenterScreen" BorderBrush="Black"
        Background="Black" Icon="Images/Guitar.ico"
        ResizeMode="NoResize" Loaded="WindowLoaded">
    <Grid>
        <ComboBox Height="23" SelectionChanged="GuitarTypeSelectionChanged" HorizontalAlignment="Left" Margin="12,31,0,0" Name="cboBoxGuitarTypes"
                  VerticalAlignment="Top" Width="195" />
        <DataGrid AutoGenerateColumns="True" HorizontalAlignment="Stretch" Margin="12,59,110,52" Name="dataGridInventory" VerticalAlignment="Stretch" />
    </Grid>
</Window>
